<!-- Globally enable or disable the debug option -->
\define tv-debug() yes

<!-- Add function, macro, proc and widget definitions to the tooltip -->
\define tv-debug-functions() yes
\define tv-debug-macros() yes
\define tv-debug-procedures() yes
\define tv-debug-widgets() yes

<!-- Define a custom filter to reduce the number of variables shown. Defaults to: [limit[20]] -->
\define tv-debug-filterXXX() [prefix[list-links]]
\define tv-debug-filter() [prefix[listItem]]
\define tv-debug-filterXXX() [limit[100]]  -[prefix[colour]] -[prefix[tv-]]  -[prefix[tf.change-input]]

<!-- [limit[xx]] is needed otherwise the subfilter does not work -->
\define tv-debug-filterXXX() [subfilter{test-dynamic-filter!!filter}]

\define tv-debug-filter() [limit[2000]]

