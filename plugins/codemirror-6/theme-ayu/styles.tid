/* ============================================================================
   Editor Chrome
   ============================================================================ */

.cm6-theme-ayu .cm-editor,
.cm6-theme-ayu-dark .cm-editor,
[data-cm6-theme="ayu"] .cm-editor,
[data-cm6-theme="ayu-dark"] .cm-editor {
  background-color: #0b0e14;
}

.cm6-theme-ayu-mirage .cm-editor,
[data-cm6-theme="ayu-mirage"] .cm-editor {
  background-color: #1f2430;
}

.cm6-theme-ayu-light .cm-editor,
[data-cm6-theme="ayu-light"] .cm-editor {
  background-color: #fafafa;
}

.cm6-theme-ayu .cm-editor .cm-cursor,
.cm6-theme-ayu-dark .cm-editor .cm-cursor,
.cm6-theme-ayu-mirage .cm-editor .cm-cursor,
[data-cm6-theme="ayu"] .cm-editor .cm-cursor,
[data-cm6-theme="ayu-dark"] .cm-editor .cm-cursor,
[data-cm6-theme="ayu-mirage"] .cm-editor .cm-cursor {
  border-left-color: #e6b450;
}

.cm6-theme-ayu-light .cm-editor .cm-cursor,
[data-cm6-theme="ayu-light"] .cm-editor .cm-cursor {
  border-left-color: #ff9940;
}

.cm6-theme-ayu .cm-tooltip.cm-tooltip-autocomplete,
.cm6-theme-ayu-dark .cm-tooltip.cm-tooltip-autocomplete,
.cm6-theme-ayu-mirage .cm-tooltip.cm-tooltip-autocomplete,
[data-cm6-theme="ayu"] .cm-tooltip.cm-tooltip-autocomplete,
[data-cm6-theme="ayu-dark"] .cm-tooltip.cm-tooltip-autocomplete,
[data-cm6-theme="ayu-mirage"] .cm-tooltip.cm-tooltip-autocomplete {
  background-color: #0d1017;
