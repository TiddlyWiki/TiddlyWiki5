}

.cm6-theme-ayu .cm-completionMatchedText,
.cm6-theme-ayu-dark .cm-completionMatchedText,
.cm6-theme-ayu-mirage .cm-completionMatchedText,
[data-cm6-theme="ayu"] .cm-completionMatchedText,
[data-cm6-theme="ayu-dark"] .cm-completionMatchedText,
[data-cm6-theme="ayu-mirage"] .cm-completionMatchedText {
  color: #59c2ff;
}

.cm6-theme-ayu-light .cm-tooltip.cm-tooltip-autocomplete,
[data-cm6-theme="ayu-light"] .cm-tooltip.cm-tooltip-autocomplete {
  background-color: #ffffff;
  border-color: #e8e9eb;
}

.cm6-theme-ayu-light .cm-completionMatchedText,
[data-cm6-theme="ayu-light"] .cm-completionMatchedText {
