.cm6-theme-ayu-dark .tok-keyword,
.cm6-theme-ayu-mirage .tok-keyword,
[data-cm6-theme="ayu"] .tok-keyword,
[data-cm6-theme="ayu-dark"] .tok-keyword,
[data-cm6-theme="ayu-mirage"] .tok-keyword {
  color: #ff8f40;
}

.cm6-theme-ayu .tok-function,
.cm6-theme-ayu-dark .tok-function,
.cm6-theme-ayu-mirage .tok-function,
[data-cm6-theme="ayu"] .tok-function,
[data-cm6-theme="ayu-dark"] .tok-function,
