}

/* ============================================================================
   Autocomplete Selected - Dark
   ============================================================================ */

.cm6-theme-ayu .cm-tooltip.cm-tooltip-autocomplete > ul > li[aria-selected],
.cm6-theme-ayu-dark .cm-tooltip.cm-tooltip-autocomplete > ul > li[aria-selected],
.cm6-theme-ayu-mirage .cm-tooltip.cm-tooltip-autocomplete > ul > li[aria-selected],
[data-cm6-theme="ayu"] .cm-tooltip.cm-tooltip-autocomplete > ul > li[aria-selected],
[data-cm6-theme="ayu-dark"] .cm-tooltip.cm-tooltip-autocomplete > ul > li[aria-selected],
