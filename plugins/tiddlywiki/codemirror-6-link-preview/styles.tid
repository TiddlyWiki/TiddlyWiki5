/* Link Preview Plugin Styles */

.cm6-tw-link-preview {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, sans-serif;
    background: <<colour tiddler-background>>;
    border: 1px solid <<colour tiddler-border>>;
    color: <<colour foreground>>;
}

.cm6-preview-content {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.cm6-preview-title {
    font-size: 14px;
    color: <<colour foreground>>;
    border-bottom: 1px solid <<colour tiddler-border>>;
    padding-bottom: 4px;
    margin-bottom: 2px;
}

.cm6-preview-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
}

.cm6-preview-tag {
    display: inline-block;
    padding: 1px 6px;
    font-size: 11px;
    background: <<colour tag-background>>;
    color: <<colour tag-foreground>>;
    border-radius: 3px;
}

.cm6-preview-type {
    font-size: 11px;
    color: <<colour muted-foreground>>;
    font-style: italic;
}

/* Rendered tiddler body preview - container for flex layout */
.cm6-preview-body {
    flex: 1;
    min-height: 0;
    overflow-x: hidden;
    overflow-y: auto;
}

/* Inner content scaled down for thumbnail view */
.cm6-preview-body-inner {
    transform: scale(0.75);
    transform-origin: top left;
    width: 133.33%; /* 1 / 0.75 to compensate for scale */
    word-break: break-word;
}

/* Constrain images within preview */
.cm6-preview-body img {
    max-width: 100%;
    max-height: 150px;
    object-fit: contain;
}

/* Style embedded code */
.cm6-preview-body pre,
.cm6-preview-body code {
    font-size: 11px;
}

/* Hide edit buttons and other interactive elements in preview */
.cm6-preview-body .tc-tiddler-controls,
.cm6-preview-body .tc-edit-texteditor,
.cm6-preview-body button {
    display: none;
}

/* Legacy: raw text fallback */
.cm6-preview-text {
    font-size: 12px;
    color: <<colour foreground>>;
    line-height: 1.5;
    max-height: 150px;
    overflow-y: auto;
    white-space: pre-wrap;
    word-break: break-word;
}

.cm6-preview-image img {
    max-width: 100%;
    max-height: 150px;
    object-fit: contain;
    border-radius: 4px;
}

.cm6-preview-meta {
    font-size: 10px;
    color: <<colour muted-foreground>>;
    border-top: 1px solid <<colour tiddler-border>>;
    padding-top: 4px;
    margin-top: 2px;
}

.cm6-preview-missing {
    color: <<colour alert-highlight>>;
    font-style: italic;
}
