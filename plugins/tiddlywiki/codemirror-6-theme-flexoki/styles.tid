  /* Semantic colors - Flexoki light accents */
  --wt-teal: #24837b;           /* Cyan - widgets */
  --wt-teal-dim: #24837b;
  --wt-blue: #205ea6;           /* Blue - links */
  --wt-violet: #5e409d;         /* Purple - transclusions */
  --wt-cyan: #24837b;           /* Cyan - filters */
  --wt-orange: #bc5215;         /* Orange - macros */
  --wt-rose: #af3029;           /* Red - conditionals */
  --wt-amber: #ad8301;          /* Yellow - attributes */
  --wt-slate: #403e3c;          /* 800 - code */
  --wt-purple: #5e409d;         /* Purple - pragmas */
  --wt-green: #66800b;          /* Green - strings */
  --wt-red: #af3029;            /* Red - errors */
  --wt-magenta: #a02f6f;        /* Magenta */

  /* Formatting */
  --wt-bold: #100f0f;
  --wt-italic: #1c1b1a;
  --wt-strike: #9f9d96;
  --wt-underline: #1c1b1a;
  --wt-heading: #ad8301;

  /* Code blocks */
  --wt-code-bg: #f2f0e5;
  --wt-code-fg: #a02f6f;

  /* Highlight */
  --wt-highlight-bg: rgba(173, 131, 1, 0.15);
  --wt-highlight-fg: #ad8301;

  /* Comments */
  --wt-comment: #878580;
  --wt-mark: #dad8ce;
}

