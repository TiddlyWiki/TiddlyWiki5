/* ============================================================================
   Flexoki Theme for CodeMirror 6
   ============================================================================
   
   Based on https://stephango.com/flexoki
   
   Flexoki is an inky color scheme designed for reading and writing.
   Created by Steph Ango. Warm, gentle on the eyes, with high readability.
   
   ============================================================================ */

/* ============================================================================
   Flexoki Color Reference
   ============================================================================
   
   Base tones (dark):
   black       #100f0f
   950         #1c1b1a
   900         #282726
   850         #343331
   800         #403e3c
   700         #575653
   600         #6f6e69
   500         #878580
   
   Base tones (light):
   paper       #fffcf0
   50          #f2f0e5
   100         #e6e4d9
   150         #dad8ce
   200         #cecdc3
   300         #b7b5ac
   400         #9f9d96
   500         #878580
   
   Accent colors:
   red         #af3029 (dark: #d14d41)
   orange      #bc5215 (dark: #da702c)
   yellow      #ad8301 (dark: #d0a215)
   green       #66800b (dark: #879a39)
   cyan        #24837b (dark: #3aa99f)
   blue        #205ea6 (dark: #4385be)
   purple      #5e409d (dark: #8b7ec8)
   magenta     #a02f6f (dark: #ce5d97)
   
   ============================================================================ */

/* ============================================================================
   Flexoki Dark
   ============================================================================ */

.cm6-theme-flexoki-dark,
.cm6-theme-flexoki,
[data-cm6-theme="flexoki-dark"],
[data-cm6-theme="flexoki"] {
  /* Base palette - Flexoki dark */
  --wt-bg: #100f0f;
  --wt-bg-subtle: #1c1b1a;
  --wt-fg: #cecdc3;
  --wt-fg-muted: #878580;
  --wt-fg-faint: #575653;
  --wt-border: #282726;
  --wt-selection: rgba(52, 51, 49, 0.8);
  --wt-line-highlight: rgba(28, 27, 26, 0.6);

  /* Semantic colors - Flexoki dark accents */
  --wt-teal: #3aa99f;           /* Cyan - widgets */
  --wt-teal-dim: #24837b;
  --wt-blue: #4385be;           /* Blue - links */
  --wt-violet: #8b7ec8;         /* Purple - transclusions */
  --wt-cyan: #3aa99f;           /* Cyan - filters */
  --wt-orange: #da702c;         /* Orange - macros */
  --wt-rose: #d14d41;           /* Red - conditionals */
  --wt-amber: #d0a215;          /* Yellow - attributes */
  --wt-slate: #b7b5ac;          /* 300 - code */
  --wt-purple: #8b7ec8;         /* Purple - pragmas */
  --wt-green: #879a39;          /* Green - strings */
  --wt-red: #d14d41;            /* Red - errors */
  --wt-magenta: #ce5d97;        /* Magenta */

  /* Formatting */
  --wt-bold: #e6e4d9;
  --wt-italic: #cecdc3;
  --wt-strike: #6f6e69;
  --wt-underline: #cecdc3;
  --wt-heading: #d0a215;

  /* Code blocks */
  --wt-code-bg: #1c1b1a;
  --wt-code-fg: #ce5d97;

  /* Highlight */
  --wt-highlight-bg: rgba(208, 162, 21, 0.2);
  --wt-highlight-fg: #d0a215;

  /* Comments */
  --wt-comment: #6f6e69;
  --wt-mark: #343331;
}

/* ============================================================================
   Flexoki Light
   ============================================================================ */

.cm6-theme-flexoki-light,
[data-cm6-theme="flexoki-light"] {
  /* Base palette - Flexoki light (paper) */
  --wt-bg: #fffcf0;
  --wt-bg-subtle: #f2f0e5;
  --wt-fg: #100f0f;
  --wt-fg-muted: #6f6e69;
