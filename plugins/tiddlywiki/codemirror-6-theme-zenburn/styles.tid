}

/* ============================================================================
   Search
   ============================================================================ */

.cm6-theme-zenburn .cm-searchMatch,
.cm6-theme-zenburn-high .cm-searchMatch,
[data-cm6-theme="zenburn"] .cm-searchMatch,
[data-cm6-theme="zenburn-high"] .cm-searchMatch {
