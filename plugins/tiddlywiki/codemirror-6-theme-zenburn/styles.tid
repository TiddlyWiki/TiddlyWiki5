}

.cm6-theme-zenburn .cm-completionMatchedText,
.cm6-theme-zenburn-high .cm-completionMatchedText,
[data-cm6-theme="zenburn"] .cm-completionMatchedText,
[data-cm6-theme="zenburn-high"] .cm-completionMatchedText {
