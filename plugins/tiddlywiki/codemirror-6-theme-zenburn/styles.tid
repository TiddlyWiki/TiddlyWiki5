/* ============================================================================
   Editor Chrome
   ============================================================================ */

.cm6-theme-zenburn .cm-editor,
[data-cm6-theme="zenburn"] .cm-editor {
  background-color: #3f3f3f;
}

.cm6-theme-zenburn-high .cm-editor,
[data-cm6-theme="zenburn-high"] .cm-editor {
  background-color: #2b2b2b;
}

.cm6-theme-zenburn .cm-editor .cm-cursor,
.cm6-theme-zenburn-high .cm-editor .cm-cursor,
[data-cm6-theme="zenburn"] .cm-editor .cm-cursor,
[data-cm6-theme="zenburn-high"] .cm-editor .cm-cursor {
  border-left-color: #dcdccc;
}

.cm6-theme-zenburn .cm-editor .cm-gutters,
.cm6-theme-zenburn-high .cm-editor .cm-gutters,
[data-cm6-theme="zenburn"] .cm-editor .cm-gutters,
[data-cm6-theme="zenburn-high"] .cm-editor .cm-gutters {
  background-color: #3a3a3a;
  border-right-color: #4f4f4f;
  color: #7f7f7f;
}

.cm6-theme-zenburn .cm-editor .cm-matchingBracket,
.cm6-theme-zenburn-high .cm-editor .cm-matchingBracket,
[data-cm6-theme="zenburn"] .cm-editor .cm-matchingBracket,
[data-cm6-theme="zenburn-high"] .cm-editor .cm-matchingBracket {
  background-color: rgba(140, 208, 211, 0.3);
