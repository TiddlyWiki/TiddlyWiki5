  --wt-blue: #9ccfd8;
  --wt-violet: #c4a7e7;
  --wt-cyan: #9ccfd8;
  --wt-orange: #ea9a97;         /* Rose (slightly different) */
  --wt-rose: #eb6f92;
  --wt-amber: #f6c177;
  --wt-slate: #e0def4;
  --wt-purple: #c4a7e7;
  --wt-green: #3e8fb0;          /* Pine */
  --wt-red: #eb6f92;

  --wt-bold: #e0def4;
  --wt-italic: #e0def4;
  --wt-strike: #6e6a86;
  --wt-underline: #e0def4;
  --wt-heading: #9ccfd8;

  --wt-code-bg: #2a273f;
  --wt-code-fg: #ea9a97;

  --wt-highlight-bg: rgba(246, 193, 119, 0.2);
