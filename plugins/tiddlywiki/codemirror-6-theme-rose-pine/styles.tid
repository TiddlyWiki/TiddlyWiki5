/* ============================================================================
   Rosé Pine Theme for CodeMirror 6
   ============================================================================
   
   Based on https://rosepinetheme.com/
   
   All natural pine, faux fur and a bit of soho vibes for the classy minimalist.
   Three variants: Main, Moon, Dawn.
   
   ============================================================================ */

/* ============================================================================
   Rosé Pine Main (Default)
   ============================================================================ */

.cm6-theme-rose-pine,
.cm6-theme-rose-pine-main,
[data-cm6-theme="rose-pine"],
[data-cm6-theme="rose-pine-main"] {
  --wt-bg: #191724;             /* Base */
  --wt-bg-subtle: #1f1d2e;      /* Surface */
  --wt-fg: #e0def4;             /* Text */
  --wt-fg-muted: #6e6a86;       /* Muted */
  --wt-fg-faint: #524f67;       /* Overlay */
  --wt-border: #26233a;         /* Highlight low */
  --wt-selection: rgba(111, 108, 139, 0.35);
  --wt-line-highlight: rgba(38, 35, 58, 0.6);

  --wt-teal: #9ccfd8;           /* Foam */
  --wt-teal-dim: #9ccfd8;
  --wt-blue: #9ccfd8;           /* Foam */
  --wt-violet: #c4a7e7;         /* Iris */
  --wt-cyan: #9ccfd8;           /* Foam */
  --wt-orange: #ebbcba;         /* Rose (warm) */
  --wt-rose: #eb6f92;           /* Love */
  --wt-amber: #f6c177;          /* Gold */
  --wt-slate: #e0def4;
  --wt-purple: #c4a7e7;         /* Iris */
  --wt-green: #31748f;          /* Pine */
  --wt-red: #eb6f92;            /* Love */

  --wt-bold: #e0def4;
  --wt-italic: #e0def4;
  --wt-strike: #6e6a86;
  --wt-underline: #e0def4;
  --wt-heading: #9ccfd8;

  --wt-code-bg: #1f1d2e;
  --wt-code-fg: #ebbcba;

  --wt-highlight-bg: rgba(246, 193, 119, 0.2);
  --wt-highlight-fg: #f6c177;

  --wt-comment: #6e6a86;
  --wt-mark: #26233a;
}

/* ============================================================================
