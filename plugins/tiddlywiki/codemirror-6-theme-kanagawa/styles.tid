/* ============================================================================
   Kanagawa Theme for CodeMirror 6
   ============================================================================
   
   Based on https://github.com/rebelot/kanagawa.nvim
   
   Dark theme inspired by the colors of the famous painting
   "The Great Wave off Kanagawa" by Katsushika Hokusai.
   
   ============================================================================ */

/* ============================================================================
   Kanagawa Wave (Default Dark)
   ============================================================================ */

.cm6-theme-kanagawa,
.cm6-theme-kanagawa-wave,
[data-cm6-theme="kanagawa"],
[data-cm6-theme="kanagawa-wave"] {
  --wt-bg: #1f1f28;             /* sumiInk1 */
  --wt-bg-subtle: #16161d;      /* sumiInk0 */
  --wt-fg: #dcd7ba;             /* fujiWhite */
  --wt-fg-muted: #727169;       /* fujiGray */
  --wt-fg-faint: #54546d;       /* sumiInk4 */
  --wt-border: #2a2a37;         /* sumiInk3 */
  --wt-selection: rgba(73, 73, 95, 0.6);
  --wt-line-highlight: rgba(42, 42, 55, 0.5);

  --wt-teal: #7fb4ca;           /* springBlue */
  --wt-teal-dim: #7fb4ca;
  --wt-blue: #7e9cd8;           /* crystalBlue */
  --wt-violet: #957fb8;         /* oniViolet */
  --wt-cyan: #7aa89f;           /* waveAqua2 */
  --wt-orange: #ffa066;         /* surimiOrange */
  --wt-rose: #e82424;           /* samuraiRed */
  --wt-amber: #e6c384;          /* carpYellow */
  --wt-slate: #c8c093;          /* oldWhite */
  --wt-purple: #957fb8;         /* oniViolet */
  --wt-green: #98bb6c;          /* springGreen */
  --wt-red: #ff5d62;            /* peachRed */
  --wt-pink: #d27e99;           /* sakuraPink */

  --wt-bold: #dcd7ba;
  --wt-italic: #dcd7ba;
  --wt-strike: #727169;
  --wt-underline: #dcd7ba;
  --wt-heading: #7e9cd8;

  --wt-code-bg: #16161d;
  --wt-code-fg: #d27e99;

  --wt-highlight-bg: rgba(230, 195, 132, 0.2);
  --wt-highlight-fg: #e6c384;

  --wt-comment: #727169;
  --wt-mark: #2a2a37;
}

