  --wt-blue: #8ba4b0;
  --wt-violet: #a292a3;
  --wt-cyan: #8ea4a2;
  --wt-orange: #b6927b;
  --wt-rose: #c4746e;
  --wt-amber: #c4b28a;
  --wt-slate: #a6a69c;
  --wt-purple: #a292a3;
  --wt-green: #87a987;
  --wt-red: #c4746e;
  --wt-pink: #a292a3;

  --wt-bold: #c5c9c5;
  --wt-italic: #c5c9c5;
  --wt-strike: #625e5a;
  --wt-underline: #c5c9c5;
  --wt-heading: #8ba4b0;

  --wt-code-bg: #0d0c0c;
  --wt-code-fg: #c4746e;

