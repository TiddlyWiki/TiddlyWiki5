/* Make the editor resize to fit its content */

.CodeMirror {
	height: auto;
	border: 1px solid #ddd;
	line-height: 1.5;
	font-family: "Monaco", monospace;
}

.CodeMirror-scroll {
	overflow-x: auto;
	overflow-y: hidden;	
}
