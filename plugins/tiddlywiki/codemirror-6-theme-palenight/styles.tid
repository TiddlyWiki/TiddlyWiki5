/* ============================================================================
   Palenight Theme for CodeMirror 6
   ============================================================================
   
   Based on https://github.com/whizkydee/vscode-palenight-theme
   
   An elegant and juicy material-like theme with purple/blue undertones.
   Popular standalone version of the palette.
   
   ============================================================================ */

/* ============================================================================
   Palenight (Default)
   ============================================================================ */

.cm6-theme-palenight,
[data-cm6-theme="palenight"] {
  --wt-bg: #292d3e;
  --wt-bg-subtle: #1b1e2b;
  --wt-fg: #a6accd;
  --wt-fg-muted: #676e95;
  --wt-fg-faint: #4e5579;
  --wt-border: #3a3f58;
  --wt-selection: rgba(113, 124, 180, 0.25);
  --wt-line-highlight: rgba(0, 0, 0, 0.2);

  --wt-teal: #80cbc4;           /* Cyan */
  --wt-teal-dim: #80cbc4;
  --wt-blue: #82aaff;           /* Blue */
  --wt-violet: #c792ea;         /* Purple */
  --wt-cyan: #89ddff;           /* Light cyan */
  --wt-orange: #f78c6c;         /* Orange */
  --wt-rose: #ff5370;           /* Red */
  --wt-amber: #ffcb6b;          /* Yellow */
  --wt-slate: #bfc7d5;          /* Light text */
  --wt-purple: #c792ea;
  --wt-green: #c3e88d;          /* Green */
  --wt-red: #ff5370;

  --wt-bold: #d0d0d0;
  --wt-italic: #a6accd;
  --wt-strike: #676e95;
  --wt-underline: #a6accd;
  --wt-heading: #82aaff;

  --wt-code-bg: #1b1e2b;
  --wt-code-fg: #ff5370;

  --wt-highlight-bg: rgba(255, 203, 107, 0.15);
  --wt-highlight-fg: #ffcb6b;

  --wt-comment: #676e95;
  --wt-mark: #3a3f58;
}

/* ============================================================================
   Palenight Italic (With italicized keywords)
   ============================================================================ */

.cm6-theme-palenight-italic,
[data-cm6-theme="palenight-italic"] {
  --wt-bg: #292d3e;
  --wt-bg-subtle: #1b1e2b;
  --wt-fg: #a6accd;
  --wt-fg-muted: #676e95;
  --wt-fg-faint: #4e5579;
  --wt-border: #3a3f58;
  --wt-selection: rgba(113, 124, 180, 0.25);
  --wt-line-highlight: rgba(0, 0, 0, 0.2);

  --wt-teal: #80cbc4;
  --wt-teal-dim: #80cbc4;
  --wt-blue: #82aaff;
  --wt-violet: #c792ea;
  --wt-cyan: #89ddff;
  --wt-orange: #f78c6c;
  --wt-rose: #ff5370;
  --wt-amber: #ffcb6b;
  --wt-slate: #bfc7d5;
  --wt-purple: #c792ea;
  --wt-green: #c3e88d;
  --wt-red: #ff5370;

  --wt-bold: #d0d0d0;
  --wt-italic: #a6accd;
  --wt-strike: #676e95;
  --wt-underline: #a6accd;
  --wt-heading: #82aaff;

  --wt-code-bg: #1b1e2b;
  --wt-code-fg: #ff5370;

  --wt-highlight-bg: rgba(255, 203, 107, 0.15);
  --wt-highlight-fg: #ffcb6b;

  --wt-comment: #676e95;
  --wt-mark: #3a3f58;
}

/* Italic variant - italicize keywords */
.cm6-theme-palenight-italic .tok-keyword,
[data-cm6-theme="palenight-italic"] .tok-keyword {
  font-style: italic;
}

