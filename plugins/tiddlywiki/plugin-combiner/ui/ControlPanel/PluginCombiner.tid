title: $:/plugins/tiddlywiki/plugin-combiner/ui/ControlPanel/PluginCombiner
tags: $:/tags/ControlPanel
caption: Plugin Combiner

\define config-base() $:/temp/plugin-combiner/

<div class="tc-plugin-combiner-wrapper">

<div class="tc-plugin-combiner-section">
<h3>Filter Plugins</h3>
<div class="tc-plugin-combiner-field">
<label>Plugin namespace prefix:</label>
<$edit-text tag="input" tiddler={{{ [<config-base>addsuffix[prefix]] }}} default="" placeholder="$:/plugins/yourname/"/>
</div>
</div>

<div class="tc-plugin-combiner-section">
<h3>Output Plugin Settings</h3>
<div class="tc-plugin-combiner-field">
<label>Plugin title:</label>
<$edit-text tag="input" tiddler={{{ [<config-base>addsuffix[outputTitle]] }}} default="$:/plugins/custom/combined" placeholder="$:/plugins/custom/combined"/>
</div>
<div class="tc-plugin-combiner-field">
<label>Display name:</label>
<$edit-text tag="input" tiddler={{{ [<config-base>addsuffix[outputName]] }}} default="Combined Plugin" placeholder="Combined Plugin"/>
</div>
<div class="tc-plugin-combiner-field">
<label>Version:</label>
<$edit-text tag="input" tiddler={{{ [<config-base>addsuffix[outputVersion]] }}} default="1.0.0" placeholder="1.0.0"/>
</div>
<div class="tc-plugin-combiner-field">
<label>Author:</label>
<$edit-text tag="input" tiddler={{{ [<config-base>addsuffix[outputAuthor]] }}} default="" placeholder="Your Name"/>
</div>
<div class="tc-plugin-combiner-field">
<label>Description:</label>
<$edit-text tag="input" tiddler={{{ [<config-base>addsuffix[outputDescription]] }}} default="A combined plugin bundle" placeholder="A combined plugin bundle"/>
</div>
</div>

<$plugin-combiner
  filter="[plugin-type[plugin]]"
  prefix={{{ [<config-base>addsuffix[prefix]get[text]] }}}
  outputTitle={{{ [<config-base>addsuffix[outputTitle]get[text]] ~[[$:/plugins/custom/combined]] }}}
  outputName={{{ [<config-base>addsuffix[outputName]get[text]] ~[[Combined Plugin]] }}}
  outputVersion={{{ [<config-base>addsuffix[outputVersion]get[text]] ~[[1.0.0]] }}}
  outputAuthor={{{ [<config-base>addsuffix[outputAuthor]get[text]] }}}
  outputDescription={{{ [<config-base>addsuffix[outputDescription]get[text]] ~[[A combined plugin bundle]] }}}
/>

</div>
