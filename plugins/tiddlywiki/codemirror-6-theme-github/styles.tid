/* ============================================================================
   GitHub Theme for CodeMirror 6
   ============================================================================
   
   Based on GitHub's code highlighting colors.
   Familiar to developers, clean and professional.
   
   ============================================================================ */

/* ============================================================================
   GitHub Light
   ============================================================================ */

.cm6-theme-github,
.cm6-theme-github-light,
[data-cm6-theme="github"],
[data-cm6-theme="github-light"] {
  --wt-bg: #ffffff;
  --wt-bg-subtle: #f6f8fa;
  --wt-fg: #24292f;
  --wt-fg-muted: #57606a;
  --wt-fg-faint: #8b949e;
  --wt-border: #d0d7de;
  --wt-selection: rgba(84, 174, 255, 0.25);
  --wt-line-highlight: rgba(234, 238, 242, 0.5);

  --wt-teal: #0a3069;           /* Blue for links */
  --wt-teal-dim: #0a3069;
  --wt-blue: #0550ae;           /* Blue */
  --wt-violet: #8250df;         /* Purple */
  --wt-cyan: #0a3069;           /* Dark blue */
  --wt-orange: #953800;         /* Orange */
  --wt-rose: #cf222e;           /* Red */
  --wt-amber: #4d2d00;          /* Brown/amber */
  --wt-slate: #24292f;
  --wt-purple: #8250df;
  --wt-green: #116329;          /* Green */
  --wt-red: #cf222e;

  --wt-bold: #24292f;
  --wt-italic: #24292f;
  --wt-strike: #8b949e;
  --wt-underline: #24292f;
  --wt-heading: #0550ae;

  --wt-code-bg: #f6f8fa;
  --wt-code-fg: #cf222e;

  --wt-highlight-bg: rgba(255, 248, 197, 0.5);
  --wt-highlight-fg: #4d2d00;

  --wt-comment: #6e7781;
  --wt-mark: #d0d7de;
}

/* ============================================================================
   GitHub Dark
   ============================================================================ */

.cm6-theme-github-dark,
[data-cm6-theme="github-dark"] {
  --wt-bg: #0d1117;
  --wt-bg-subtle: #161b22;
  --wt-fg: #c9d1d9;
  --wt-fg-muted: #8b949e;
  --wt-fg-faint: #484f58;
  --wt-border: #30363d;
  --wt-selection: rgba(56, 139, 253, 0.25);
  --wt-line-highlight: rgba(22, 27, 34, 0.5);

  --wt-teal: #58a6ff;           /* Blue */
  --wt-teal-dim: #58a6ff;
  --wt-blue: #58a6ff;
  --wt-violet: #d2a8ff;         /* Purple */
  --wt-cyan: #79c0ff;           /* Light blue */
  --wt-orange: #ffa657;         /* Orange */
  --wt-rose: #ff7b72;           /* Red */
  --wt-amber: #e3b341;          /* Yellow */
  --wt-slate: #c9d1d9;
  --wt-purple: #d2a8ff;
  --wt-green: #7ee787;          /* Green */
  --wt-red: #ff7b72;

  --wt-bold: #f0f6fc;
  --wt-italic: #c9d1d9;
  --wt-strike: #484f58;
  --wt-underline: #c9d1d9;
  --wt-heading: #58a6ff;

  --wt-code-bg: #161b22;
  --wt-code-fg: #ff7b72;

  --wt-highlight-bg: rgba(227, 179, 65, 0.2);
  --wt-highlight-fg: #e3b341;

  --wt-comment: #8b949e;
  --wt-mark: #30363d;
}

