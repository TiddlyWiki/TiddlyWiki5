title: $:/core/ui/ControlPanel/Toolbars/ItemTemplate

\define config-title()
$(config-base)$$(currentTiddler)$
\end
\whitespace trim

<$draggable tiddler=<<currentTiddler>>>
<$transclude $variable="control-panel-checkbox"
	config=<<config-title>>
	label="""<span class="tc-icon-wrapper">&#32;<$transclude field="caption"/>&#32;<i class="tc-muted">--&#32;<$transclude field="description"/></i></span>"""
	checkedValue="show"
	uncheckedValue="hide"
	default="show"
/>
</$draggable>
